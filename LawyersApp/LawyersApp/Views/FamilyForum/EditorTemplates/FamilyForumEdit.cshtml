                    @Html.EditorFor(model => model.CustodialName)@Html.ValidationMessageFor(model => model.CustodialName)
                    <i class="fa fa-barcode"></i>
                </div>
            </div>
        </div>    

        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">@Html.LabelFor(model => model.CustodialPhone)</label>
