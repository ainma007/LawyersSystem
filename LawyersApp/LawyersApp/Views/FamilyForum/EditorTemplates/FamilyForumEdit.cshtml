        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">@Html.LabelFor(model => model.ViewingHours)</label>
                <div>
                    @Html.Kendo().NumericTextBoxFor(model => model.ViewingHours)@Html.ValidationMessageFor(model => model.ViewingHours)
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">@Html.LabelFor(model => model.ChildrenNumberMale)</label>
                <div>
                    @Html.Kendo().NumericTextBoxFor(model => model.ChildrenNumberMale).Format("0")@Html.ValidationMessageFor(model => model.ChildrenNumberMale)
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
